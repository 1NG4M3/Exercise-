<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<VBox fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml" alignment="center">
    <TextArea VBox.vgrow="ALWAYS" fx:id="mainTextArea" editable="false"/>
    <HBox>
        <TextField HBox.hgrow="ALWAYS" fx:id="messageField" onAction="#sendBouttonOnClickAction"/>
        <Button text="Enter" onAction="#sendBouttonOnClickAction" />
    </HBox>
</VBox>